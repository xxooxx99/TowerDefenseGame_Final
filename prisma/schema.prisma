datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    userId          String      @id
    userPassword    String      @map("password")
    userPhoneNumber String      @unique @map("userPhoneNumber")
    UserInfo        UserInfo?   

    @@map("user")
}

model UserInfo {
    userId          String      @id
    highScore       Int         @default(0)
    win             Int         @default(0)
    lose            Int         @default(0)
    user            User        @relation(fields: [userId], references: [userId])

    @@map("UserInfo")
} 

model AbilityInfo {
  id                Int         @id
  icon              String
  name              String      
  explain           String      
  upgrade_1         String      
  upgrade_2         String      
  upgrade_3         String      
  upgrade_4         String      
  upgrade_5         String      
  costTo_1          Int         
  costTo_2          Int         
  costTo_3          Int         
  costTo_4          Int         
  costTo_5          Int         
}